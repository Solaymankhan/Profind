<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEFCF9"
        android:orientation="vertical"
        tools:context=".d_0_0_4_9_client_appointments">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/navigation_bar_2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/client_appointments_page_back_btn_id"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="-42dp"
                        android:background="@drawable/custom_button_1_2" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/back_arraw" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Appointments"
                        android:textColor="#027C64"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:gravity="end"></LinearLayout>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/client_appointments_page_tab_layout_id"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:background="@drawable/tab_background"
                app:tabIconTint="@null"
                app:tabIndicator="@drawable/tab_indicator"
                app:tabIndicatorAnimationMode="elastic"
                app:tabIndicatorColor="#85FDE3"
                app:tabIndicatorGravity="stretch"
                app:tabMode="fixed"
                app:tabTextAppearance="@style/Textsmall"
                app:tabTextColor="#027C64">

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/client_appointments_page_tab_item_1_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upcoming" />

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/client_appointments_page_tab_item_2_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Previous" />

            </com.google.android.material.tabs.TabLayout>
        </LinearLayout>
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/client_appointments_page_viewpager_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />


    </LinearLayout>